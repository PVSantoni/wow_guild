{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-md">
        <form method="post">
            {% if error %}
                <div class="p-4 mb-4 rounded-md bg-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>
            
            <div>
                <label for="username" class="block mb-1">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="username" class="w-full bg-gray-700 border border-gray-600 text-white rounded p-2" autocomplete="email" required autofocus>
            </div>
            
            <div class="mt-4">
                <label for="password" class="block mb-1">Mot de passe</label>
                <input type="password" name="password" id="password" class="w-full bg-gray-700 border border-gray-600 text-white rounded p-2" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="w-full mt-6 bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-2 px-4 rounded" type="submit">
                Se connecter
            </button>
        </form> {# <-- La balise fermante manquait implicitement #}
    </div>
{% endblock %} {# <-- C'est cette balise qu'il ne trouvait pas car la structure était invalide #}