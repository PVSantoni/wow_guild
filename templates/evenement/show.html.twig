{% extends 'base.html.twig' %}

{% block title %}{{ evenement.nom }}{% endblock %}

{% block body %}
    <h1 class="text-4xl font-bold text-yellow-400 mb-2">{{ evenement.nom }}</h1>
    <p class="text-gray-400 mb-6">Le {{ evenement.dateDebut|date('d/m/Y à H:i') }}</p>

    <div class="bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Description</h2>
        <p class="text-gray-300">{{ evenement.description|nl2br }}</p> {# nl2br pour respecter les sauts de ligne #}
    </div>

    <div class="bg-gray-800 p-6 rounded-lg shadow-md mt-6">
        <h2 class="text-2xl font-bold mb-4">Gérer ma participation</h2>
        {# ... garde le code des formulaires d'inscription ici ... #}
    </div>

    <div class="bg-gray-800 p-6 rounded-lg shadow-md mt-6">
        <h2 class="text-2xl font-bold mb-4">Participants ({{ evenement.inscriptions|length }} / {{ evenement.nbPlacesMax }})</h2>
        {# ... garde le code qui affiche les listes de participants ici ... #}
    </div>

    <hr class="my-6 border-gray-700">

    <div class="flex space-x-4">
        <a href="{{ path('app_evenement_index') }}" class="bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">Retour au calendrier</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Modifier</a>
            {{ include('evenement/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}