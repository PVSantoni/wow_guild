
{% extends 'base.html.twig' %}

{% block title %}Gestion des Membres{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-6 border-b border-gray-700 pb-2">
        Gestion des Membres
    </h1>

    <div class="bg-gray-800 rounded-lg shadow-lg overflow-x-auto">
        <table class="min-w-full text-left text-sm text-gray-300">
            <thead class="bg-gray-900 text-xs text-gray-400 uppercase">
                <tr>
                    <th scope="col" class="px-6 py-3">ID</th>
                    <th scope="col" class="px-6 py-3">Pseudo</th>
                    <th scope="col" class="px-6 py-3">Email</th>
                    <th scope="col" class="px-6 py-3">Rôles</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="border-b border-gray-700 hover:bg-gray-700">
                        <td class="px-6 py-4">{{ user.id }}</td>
                        <td class="px-6 py-4 font-medium text-white">{{ user.pseudo }}</td>
                        <td class="px-6 py-4">{{ user.email }}</td>
                        <td class="px-6 py-4">
                            {# On affiche les rôles joliment #}
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <span class="bg-yellow-500 text-gray-900 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">Admin</span>
                                {% elseif role == 'ROLE_USER' %}
                                    <span class="bg-blue-500 text-white text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">Utilisateur</span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td class="px-6 py-4">
                            <td class="px-6 py-4">
    {# On ne peut pas modifier son propre rôle #}
    {% if user.id != app.user.id %}
        {# Si l'utilisateur est déjà admin, on affiche le bouton pour le rétrograder #}
        {% if 'ROLE_ADMIN' in user.roles %}
            <form action="{{ path('app_admin_user_demote', {id: user.id}) }}" method="post" class="inline">
                <button type="submit" class="font-medium text-red-500 hover:underline">Rétrograder</button>
            </form>
        {# Sinon, on affiche le bouton pour le promouvoir #}
        {% else %}
            <form action="{{ path('app_admin_user_promote', {id: user.id}) }}" method="post" class="inline">
                <button type="submit" class="font-medium text-green-500 hover:underline">Promouvoir</button>
            </form>
        {% endif %}
    {% else %}
        <span class="text-gray-500">(Vous)</span>
    {% endif %}
</td>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4">Aucun utilisateur trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}