{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Rejoindre la Guilde</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.pseudo, {
                label: 'Pseudo en jeu',
                attr: {'class': 'w-full bg-gray-700 border border-gray-600 text-white rounded p-2 mt-1'}
            }) }}
            <div class="my-4"></div>
            {{ form_row(registrationForm.email, {
                attr: {'class': 'w-full bg-gray-700 border border-gray-600 text-white rounded p-2 mt-1'}
            }) }}
            <div class="my-4"></div>
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                attr: {'class': 'w-full bg-gray-700 border border-gray-600 text-white rounded p-2 mt-1'}
            }) }}
            <div class="my-4"></div>
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="w-full mt-6 bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-2 px-4 rounded">
                S'inscrire
            </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}